generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CarProducts {
  id          String   @id
  name        String
  coverImg    String
  price       Int
  year        Int
  km          Int
  description String?
  color       String
  gasoline    Gasoline @default(FLEX)
  tablePife   Int
  business    Boolean  @default(false)
  img         Img[]    

  @@map("carProducts")
}

enum Gasoline {
  FLEX
  HIBRID
  ELECTRIC
}

model Img {
  id            String     @id @default(uuid())
  url_img       String    
  carProduct    CarProducts?  @relation(fields: [carProductsId], references: [id], onDelete: Cascade)
  carProductsId String?

  @@map("img")
}
